<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F6">

    <ImageButton
        android:id="@+id/settings_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_settings"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"/>

    <ImageButton
        android:id="@+id/inbox_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_left_arrow"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_lakwatsa_completed_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activity_lakwatsa_completed_iv_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo_chat" />

        <TextView
            android:id="@+id/activity_lakwatsa_completed_tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/monument_extended_regular"
            android:text="@string/app_name"
            android:textColor="#070802"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_lakwatsa_completed_iv_logo"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/activity_lakwtsa_completed_details_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/activity_lakwatsa_completed_logo">

        <LinearLayout
            android:id="@+id/activity_lakwtsa_completed_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_lakwtsa_completed_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/jeko_demo_extrabold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="cubao expo trip"
                android:textAllCaps="false"
                android:textColor="#070802"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/options_icon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_options_black"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_lakwtsa_completed_datetime_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_lakwtsa_completed_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/jeko_demo_medium"
                android:text="October 26, 2024"
                android:gravity="center|start"
                android:textAllCaps="false"
                android:textColor="#070802"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_lakwtsa_completed_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/jeko_demo_medium"
                android:gravity="center|end"
                android:text="9:00 AM"
                android:textAllCaps="false"
                android:textColor="#070802"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_lakwtsa_completed_friendsend_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/activity_lakwatsa_completed_friends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_lakwatsa_completed_friend_1_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/asset_profile1" />

                <ImageView
                    android:id="@+id/activity_lakwatsa_completed_friend_2_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/asset_profile2" />

                <FrameLayout
                    android:id="@+id/more_friends"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_circle_grey"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="20sp"
                        android:textColor="#F8F6F6"
                        android:layout_gravity="center" />

                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_lakwatsa_completed_end_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/jeko_demo_medium"
                android:text="20:24 PM"
                android:gravity="center|end"
                android:textAllCaps="false"
                android:textColor="#070802"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/completed_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_round_green_no_outline"
                android:fontFamily="@font/jeko_demo_extrabold"
                android:padding="10dp"
                android:text="Completed"
                android:textAlignment="center"
                android:textColor="#070802"
                android:textSize="18sp" />

            <View
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/activity_lakwatsa_upcoming_loc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center|end">

                <ImageView
                    android:id="@+id/activity_lakwatsa_upcoming_loc_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/activity_lakwtsa_upcoming_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jeko_demo_medium"
                    android:text="Cubao Expo"
                    android:textAlignment="textEnd"
                    android:textAllCaps="false"
                    android:textColor="#070802"
                    android:textSize="18sp" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/back_profile_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#59070802"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="60dp" />

    <View
        android:id="@+id/back_profile_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F8F6F6"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/profile_user1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/asset_profile1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"/>

</androidx.constraintlayout.widget.ConstraintLayout>
