<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F6">

    <ImageButton
        android:id="@+id/settings_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_settings"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"/>

    <ImageButton
        android:id="@+id/inbox_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_inbox"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_lakwatsa_upcoming_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activity_lakwatsa_upcoming_iv_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo_chat" />

        <TextView
            android:id="@+id/activity_lakwatsa_upcoming_tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/monument_extended_regular"
            android:text="@string/app_name"
            android:textColor="#070802"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_lakwatsa_upcoming_iv_logo"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/activity_lakwtsa_expenses_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/activity_lakwatsa_upcoming_logo">

        <LinearLayout
            android:id="@+id/activity_expenses_expenses_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_expenses_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/jeko_demo_extrabold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Your expenses"
                android:textAllCaps="false"
                android:textColor="#070802"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/options_icon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/ic_add" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/habanero_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/activity_lakwtsa_expenses_ll">

        <ImageView
            android:id="@+id/habanero_payment_paying_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/asset_profile1" />

        <LinearLayout
            android:id="@+id/habanero_payment_breakdown_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <LinearLayout
                android:id="@+id/habanero_payment_details_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/habanero_user_debt_1_expense_name_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="habanero lunch"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/habanero_user_debt_1_total_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="P1500.00"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/habanero_user_debt_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/habanero_user_debt_1_iv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/asset_profile2" />

                <TextView
                    android:id="@+id/habanero_user_debt_1_tv"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="P500.00"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:buttonTint="#000000"
                    android:shadowColor="#000000"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/habanero_user_debt_1_notification_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/ic_bell" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/habanero_user_debt_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/habanero_user_debt_2_iv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/asset_profile3" />

                <TextView
                    android:id="@+id/habanero_user_debt_2_tv"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="P500.00"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:buttonTint="#000000"
                    android:shadowColor="#000000"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/habanero_user_debt_2_notification_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/ic_bell" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:layout_weight="0"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/habanero_payment"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/to_pay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        tools:layout_editor_absoluteX="25dp">

        <LinearLayout
            android:id="@+id/activity_expenses_to_pay_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_expenses_to_pay_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/jeko_demo_extrabold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="To pay"
                android:textAllCaps="false"
                android:textColor="#070802"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ukay_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/to_pay_title">

        <ImageView
            android:id="@+id/ukay_payment_paying_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/asset_profile2" />

        <LinearLayout
            android:id="@+id/ukay_payment_breakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <LinearLayout
                android:id="@+id/ukay_payment_details"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ukay_user_debt_1_expense_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ukay clothes"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/ukay_user_debt_1_total_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="P350.00"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ukay_user_debt_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ukay_user_debt_1_iv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/asset_profile1" />

                <TextView
                    android:id="@+id/ukay_user_debt_1_tv"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="P350.00"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:buttonTint="#000000"
                    android:shadowColor="#000000"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/ukay_user_debt_1_notification_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/ic_bell" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
