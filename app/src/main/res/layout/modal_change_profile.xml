<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    app:cardBackgroundColor="#F4F2F2"
    app:cardCornerRadius="40dp"
    app:strokeColor="@color/black"
    app:strokeWidth="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageButton
            android:id="@+id/modal_change_profile_btn_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:backgroundTint="#F6F4F4"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_close" />

        <ImageView
            android:id="@+id/profile_user"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:src="@drawable/asset_profile1" />

        <TextView
            android:id="@+id/modal_change_profile_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/jeko_demo_extrabold"
            android:text="Select profile picture"
            android:textAlignment="center"
            android:textColor="#070802"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:id="@+id/male1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:src="@drawable/asset_profile1"  />

            <ImageView
                android:id="@+id/female1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:src="@drawable/asset_profile2"  />

            <ImageView
                android:id="@+id/male2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:src="@drawable/asset_profile3"  />

            <ImageView
                android:id="@+id/female2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="2dp"
                android:src="@drawable/asset_profile4"  />
        </LinearLayout>

        <Button
            android:id="@+id/modal_change_profile_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_round_yellow_80"
            android:fontFamily="@font/jeko_demo_extrabold"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#070802"
            android:textSize="20sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
